</head>
<body>
       <!-- Start: Navigation -->
       <%- include('layouts/nav'); -%>
       <!-- End: Navigation -->
       <!-- Start Home section -->
       <section class="home-section">
        <span id='order-list' class="list-tab" onclick="displayShoppingList(this)"> ORDERS</span>
        <span id="cart-list" class="selected-tab list-tab" onclick="displayShoppingList(this)"> CART</span>
    </section>
    <!-- End Home section -->

    <!-- start: Order list section -->
    <section class="order-list list hide">
     <div class="order-item">
         <div class="less-details">
            <p><span>ORDER #54 </span><span class="order-status">Pending</span></p>
